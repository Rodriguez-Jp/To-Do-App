<UserControl x:Class="ToDoApp.View.UserControls.LeftMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="IndianRed" Grid.Row="0"/>
        <Button Content="Add task" Grid.Row="0" Foreground="WhiteSmoke" FontSize="30" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0"/>

        <Rectangle Fill="IndianRed"  Grid.Row="1"/>
        <Button Content="My tasks" Grid.Row="1" Foreground="WhiteSmoke" FontSize="30" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0"/>

        <Rectangle Fill="IndianRed"  Grid.Row="2"/>
    </Grid>
</UserControl>
