<Page x:Class="ToDoApp.MyTasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToDoApp"
      xmlns:UserControls="clr-namespace:ToDoApp.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyTasksPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Fill="IndianRed" Grid.Row="0"/>
        <TextBlock Text="Todo app" Foreground="WhiteSmoke" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontWeight="Medium" />


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <UserControls:LeftMenuBar Grid.Column="0"/>

            <!-- Main content -->

            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="85*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Text="My tasks" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Margin="0, 5, 0, 0" BorderThickness="0" FontWeight="Medium"/>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80*" />
                        <RowDefinition Height="20*"/>
                    </Grid.RowDefinitions>

                    <ListView Grid.Row="0" ItemsSource="{Binding AllTodos}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <UserControls:TaskCard/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="1">
                        <Button Content="Clear finished tasks" Background="IndianRed" Width="150" Margin="20" Foreground="White" FontSize="15"/>
                    </StackPanel>
                </Grid>
            </Grid>



        </Grid>
    </Grid>
</Page>
